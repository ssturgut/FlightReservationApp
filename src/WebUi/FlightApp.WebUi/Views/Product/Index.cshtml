@model IEnumerable<FlightApp.Domain.Entities.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Products</h1>
        <a href="@Url.Action("Create")">Add New Product</a>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Value</th>
                    <th>Quantity</th>
                    <th>Create Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Value</td>
                        <td>@product.Quantity</td>
                        <td>@product.CreateDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>